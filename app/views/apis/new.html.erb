<h2>New API Creation Page</h2>

<p>
  <%= form_for Api.new do |f| %>
    <%= f.text_field :name, id: "Name" %>
    <%= f.text_field :url, id: "URL" %>
    <%= f.text_field :description, id: "Description" %>
    <%= f.text_field :tags, value: "", id: "Tags" %>
    <%= f.select :category, options_for_select(Api::CATEGORIES) %>
    Paid?
    <%= f.collection_radio_buttons(:paid, [[true, "Yes."], [false, "No."]],
      :first, :last) %>

    <%= f.submit "Create API" %>
  <% end %>
</p>
